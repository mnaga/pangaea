[data-view-name="cart-mini"]
  display: none
  position: absolute
  z-index: 1001
  right: 10px
  top: 92px
  width: 400px
  background-color: #FFF
  padding: 25px
  min-height: 100px
  box-shadow: 0px 4px 6px 0px rgba(0,0,0,.2)
  border-radius: 10px
  border: 2px solid #ebebeb

  &:after, &:before
    bottom: 100%
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;

  &:after
    border-color: rgba(255, 255, 255, 0);
    border-bottom-color: #ffffff;
    border-width: 15px;
    left: 82%;
    margin-left: -15px;

  &:before
    border-color: rgba(227, 227, 227, 0);
    border-bottom-color: #ebebeb;
    border-width: 19px;
    left: 82%;
    margin-left: -19px;


  h2
    border-bottom: solid 1px #ddd

  .cart-items
    margin: 20px 0px
    .cart-item
      clearfix()
      margin: 4px auto 20px auto
      padding-bottom: 5px
      border-bottom: solid 1px #eee
      &:last-child
        border-bottom: solid 0px
        margin-bottom: 0px
      img
        float:left
        width: 60px
      .details
        float: left
        width: 220px
        h2
          color: #1b79b7
          font-size: 1.0em
          border: solid 0px
        p
          margin: 0px
        .inner
          clearfix()
          margin-left: 10px
      .quantity
        float:left
        width: 60px
        text-align: center
        input[type="text"]
          width: 36px
          color: #000
          box-shadow: inset 0 1px 1px rgba(0,0,0,0.1);
  .cart-totals
    border-top: solid 1px #ddd
    padding-top: 5px;
    text-align: right
    .totals
      color: rgb(83, 90, 95);
      font-weight: bold
      font-size: 1.2em
    .button
      margin-top: 5px
