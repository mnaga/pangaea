$department-nav-height = 400px

[data-view-name="departments-global"]
  display: none
  position: absolute
  z-index: 1002
  left: 0
  top: 0px
  padding-top: 52px

  .departments
    float: left
    width: 250px
    position: relative
    z-index:1005
    height: $department-nav-height
    background-color: #FFF
    box-shadow: 0px 1px 3px rgba(0,0,0,.7)
    color: #1b79b7
    ul
      margin: 10px auto auto 10px
      li
        padding: 4px 10px 2px 17px
        border-top-left-radius: 15px
        border-bottom-left-radius: 15px
        cursor: pointer
        color: #1b79b7
        &.selected
          background-color: #1b79b7
          color: #FFF
          position: relative
          &:after
            left: 100%;
            border: solid transparent;
            content: " ";
            height: 0;
            width: 0;
            position: absolute;
            pointer-events: none;
            border-color:  rgba(183, 155, 7, 0);
            border-left-color: #1b79b7;
            border-width: 15px;
            top: 50%;
            margin-top: -15px;

  .expanded
    display: none
    box-shadow 0px 1px 3px rgba(0,0,0,.7), inset 10px 0px 10px 0px rgba(0, 0, 0, .1)
    float: left
    color: #1b79b7
    padding: 20px 0px 0 25px
    background-color: #FFF
    height: $department-nav-height
    border-bottom-right-radius: 15px
    .wrapper
      clearfix()
    .column
      float: left
      width: 250px
    h2
      font-size: 1.2em

  .sub-department
    display:inline-block
    font-size: .9em
    min-width: 200px
    :last-child
      margin-bottom: 10px
    h2
      font-weight: bold

    ul
      li
        cursor: pointer
        padding: 2px 8px 0px 10px
        border-radius(15px)
        &:hover
          background-color: #1b79b7
          color: #FFF

