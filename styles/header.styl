[data-view-name="header"]
  position: relative
  height: 50px
  padding: 0 0 0 12px
  background-color: white
  background-image: linear-gradient(#fdfdfd 0%, #eaedf0 40%, white 100%)
  border-bottom: 1px solid #e6e6e6
  box-shadow: inset 0 1px 0 white
  user-select: none

  &.expanded
    margin-bottom: 64px

  .logo
    display: block
    height: 50px
    text-indent: -9999em
    background-image: url("images/logo.svg")
    background-repeat: no-repeat
    background-size: 100% 100%
    background-position: 0 50%

  .header-logo
    float: left
    width: 120px
    
  .header-actions
    margin-right: 12px
    white-space: nowrap
    overflow: hidden
    float: right
    text-align: right
    set-tap-highlight()
  
  .header-action
    position: relative
    display: inline-block
    width: 14px;
    height: 18px;
    margin-top: 14px;
    margin-left: 16px;
    padding: 0;
    overflow: hidden;
    text-align: left
    margin-right: 0
    color: #adb4bd
    font-size: 0.95em
    font-weight: normal
    -webkit-tap-highlight-color: rgba(0, 0, 0, .20)
    tap-highlight-color: rgba(0, 0, 0, .20)

    > span
      display: block
      margin-bottom: -5px
      margin-left: -2px
      font-weight: bold
      color: #535a5f
      text-shadow: 0 1px 0 rgba(white, 0.7)
      padding-left: 20px
      background-position: left 2px
      background-repeat: no-repeat
  
    &:after, &:before
      content: ''
      display: block
      position: absolute
      bottom: 16px
      top: 16px
      width: 1px
  
    &:before
      background-image: linear-gradient(rgba(#fff, 0) 0%, rgba(#fff,   1) 50%, rgba(#ff, 0) 100%)
      left: 0
  
    &:after
      background-image: linear-gradient(rgba(#d6d6d6, 0) 0%,   rgba(#d6d6d6, 1) 50%, rgba(#d6d6d6, 0) 100%)
      right: 0
  
    &:first-child:before, &:last-child:after
      display: none
  
    &[data-action="wishlists"] > span
      image-background("images/icons/TopNav-Wishlist.png")
  
    &[data-action="login"] > span
      image-background("images/icons/TopNav-SignIn.png")
  
    &[data-action="cart"] > span
      image-background("images/icons/TopNav-Cart.png")

  .search-toggle
    background-image: url("images/icons/search.png")
    background-size: image-width("images/icons/search.png") image-height("images/icons/search.png")
    background-repeat: no-repeat
    background-color: transparent
    border: 0
    overflow: hidden
    *text-indent: -9999px
    width: 20px
    height: 20px

    position: absolute;
    right: 100px;
    top: 17px;
    width: 18px;
    height: 18px;
    background-size: 14px;

    &::before
      content: ""
      display: block
      width: 0
      height: 150%

@media all and (min-width: 800px)
  [data-view-name="header"]
    height: $header-height
    margin: 0
    padding: 0 0 0 $gutter-width + 5

    &.expanded
      margin-bottom: 0

    .logo
      height: $header-height

    .header-logo
      span-columns(2.325)

    .search-toggle
      display: none

    .header-actions
      span-columns(6.25 omega)

    .header-action
      height: $header-height
      width: auto
      margin: 0
      padding-top: 24px
      padding-right: gutter(4)
      padding-left: gutter(4)
      overflow: visible

  