[data-view-name="shelf/department-list"]
  clear: both

  .filter-item
    position: relative
    padding: 0 12px
    line-height: 48px
    background: #FFF !important // Overwrite annoying abba zebra stripes
    border-bottom: 1px solid #ccc

  .trigger
    display: none

  .name
    width: 100%
    height: 48px
    padding-right: 60px
    font-size: 18px

    p
      margin: 0
      line-height: 48px

  .count
    position: absolute
    top: 0
    right: 12px