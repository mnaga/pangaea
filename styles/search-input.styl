[data-view-name="search-input"]
  display: none
  position: absolute
  bottom: -65px
  left: 0;
  width: 100%;
  margin: 0
  padding: 12px;
  overflow: visible
  border-bottom: 1px solid #eee;
  text-align: center;

  &.active
    display: block
  
  input[type="search"]
    width: 100%
    margin: 0
    height: 41px
    padding: 9px 2em 6px 2em
    font-family: $font-family
    font-size: 1.2em
    font-weight: 300
    border-width: 1px
    border-style: solid
    border-color: #959595 #bdbdbd #dedede
    box-shadow: inset 0 1px 3px rgba(#000, .25), 0 1px 1px white
    border-radius: 6px
    background-image: url("images/icons/search.png"), linear-gradient(  rgba(#000, .1) 0%, rgba(#fff, .05) 100%)
    background-size: image-width("images/icons/search.png") image-height("images/icons/search.png"), 100% 100%
    background-position: 10px 50%, 0 0
    background-repeat: no-repeat  
    appearance: none
    // TODO Sometimes stylus forgets to prefix?
    -webkit-appearance: none
    -webkit-font-smoothing: antialiased
    
    color: $inputColor
    &::-webkit-input-placeholder
      color: #cfcfcf

@media all and (min-width: 800px)
  [data-view-name="search-input"]
    position: static
    display: block
    span-columns(3)
    pre(1)
    padding: 0
    margin-top: 23px
    suffix(2)
    post(2)
    border: 0