[data-view-name="search-input"]
  span-columns(3)
  pre(1)
  overflow: visible
  margin-top: 23px
  suffix(2)
  post(2)
  
  input[type="search"]
    width: 100%
    height: 41px
    padding-left: 2em
    padding-top: 9px
    font-size: 1.2em
    font-weight: 300
    border-width: 1px
    border-style: solid
    border-color: #959595 #bdbdbd #dedede
    box-shadow: inset 0 1px 3px rgba(#000, .25), 0 1px 1px white
    border-radius: 6px
    background-image: url("images/icons/search.png"), linear-gradient(  rgba(#000, .1) 0%, rgba(#fff, .05) 100%)
    background-size: image-width("images/icons/search.png") image-  height("images/icons/search.png"), 100% 100%
    background-position: 10px 50%, 0 0
    background-repeat: no-repeat  
