[data-view-name="sort-selector"]
  position: absolute
  bottom: -95px
  width: 100%
  padding: 10px 6px
  box-shadow: inset 0 1px #bfbfbf

  > li
    cursor: pointer
    display: inline-block
    padding-left: 28px

    width: 33.33%
    padding: 0 6px
    font-size: 14px
    text-align: center

    span
      display: block
      width: 100%
      padding: 0 8px
      background-image: linear-gradient(top, #fff 0%, #ededed 100%)
      background-repeat: no-repeat
      border: 1px solid #d1d1d1
      border-radius: 50px
      box-shadow: 0px 1px 0px #efefef
      height: 32px
      line-height: 32px
      color: #414141
      text-shadow: 0px 1px 0px #fff
      white-space: nowrap
      -webkit-tap-highlight-color: rgba(0,0,0,0)

    &.active span, span:active
      border-color: transparent
      background-image: linear-gradient(top, #e0e0e0 0%, #f7f7f7 100%)
      box-shadow: 0px 1px 0px #a0a0a0 inset, 0px 2px 0px #cccccc inset, 0px -1px 0px #fff

    &:first-child
      cursor: inherit

  .active
    color: #444444

  .sort-selector-label
    display: none

@media all and (min-width: 800px)
  [data-view-name="sort-selector"]
    position: absolute
    right: 0
    bottom: auto
    left: 0
    width: auto
    padding: 0
    box-shadow: none

    > li
      width: auto
      padding: 0 0 0 28px
      font-size: 26px
      line-height: 84px

      span
        height: auto
        padding: 0
        background: none
        border: 0
        color: inherit
        line-height: auto
        text-shadow: none
        box-shadow: none

      &.active span, span:active
        background: none
        box-shadow: none

    .sort-selector-label
      display: inline-block