.subnav
  position: relative

.shelf-primary
  padding-top: 95px

.shelf-department-picker, .refinements-toggle
  width: 50%
  height: 44px
  float: left
  margin: 0
  border-top: 0
  border-right: 0
  border-bottom-color: #bbb
  border-radius: 0
  font-size: 14px
  box-shadow: none

  &::after
    display: inline-block
    position: relative
    top: -1px
    width: 10px
    margin-left: 5px
    content: '+'

  &.open::after
    content: '\2013'

.shelf-department-picker
  border-left: 0

.refinements-toggle
  padding-right: 60px

.shelf-list
  clear: both

  &.empty
    border-top: 1px solid #eee

.item-preview
  display: block
  position: relative
  overflow: hidden
  padding: 16px 12px

  &::after
    position: absolute
    content: " "
    right: 0
    left: 0
    top: 0
    height: 1px
    background: linear-gradient(left, white 0%, #e5e5e5 25%, #e5e5e5 75%, white 100%)

  .stars
    position: relative
    margin-left: 112px

.item-preview-image
  float: left
  max-width: 100px

.item-preview-text
  padding: 0
  margin-left: 112px

.grid li
  display: inline-block
  width: 50%
  text-align: center

  .item-preview-image
    float: none
    max-width: 100%
    margin: 0 auto

  .price
    position: absolute
    bottom: 0
    left: 0
    width: 100%

  .name
    display: none

  .stars
    display: none

.empty-shelf, .grid .empty-shelf
  display: block
  width: 100%
  padding: 50px 0 50px 12px
  text-align: left
  color: $font-color

  h2
    margin-bottom: 0.5em
    font-size: 2em

  li
    display: block
    width: 100%
    margin: 0.5em 0
    font-size: 18px
    text-align: left
    line-height: 1.2

@media all and (min-width: 400px)
  .grid li
    width: 33%

@media all and (min-width: 600px)
  .item-preview
    display: table
    width: 100%;
    padding: 20px

    .stars
      display: table-cell
      width: 195px
      min-height: 100px
      padding: 8px 0 8px 20px
      vertical-align: middle

      &::after
        position: absolute
        content: " "
        left: 0
        top: 0
        bottom: 0
        width: 1px
        background: linear-gradient(top, white 0%, #e5e5e5 25%, #e5e5e5 75%, white 100%)
  
  .item-preview-image
    float: none
    display: table-cell
    width: 100px;
    vertical-align: middle

  .item-preview-text
    display: table-cell
    padding: 0 24px
    vertical-align: middle

  .grid
    .item-preview, .stars, .item-preview-image, .item-preview-text
      display: block

@media all and (min-width: 800px)
  .shelf-sidebar
    float: left
    width: space(3)
    border-top: 1px solid #eee
    box-shadow: 1px 0 0 #ccc

  .shelf-primary
    float: left
    width: columns(9)
    padding-top: 0
    border-left: 1px solid #ccc

  .refinements-toggle
    display: none;

  .shelf-department-picker
    position: relative
    display: block
    width: 100%
    height: 48px
    padding: 12px 12px 12px 48px
    float: none
    background: none
    border: 0
    color: #444
    font-family: $font-family
    font-size: 16px
    font-weight: normal
    text-align: left

    &:active
      background: none
      box-shadow: none

    &::after, &.open::after
      position: absolute
      content: " "
      right: 0
      left: 0
      bottom: 0
      height: 1px
      background: linear-gradient(left, #eee 0%, #d9d9d9 25%, #d9d9d9 75%, #eee 100%)

    &::before
      position: absolute
      left: 24px
      top: 13px
      content: "▶"
      font-size: 14px

    &.open::before
      left: 22px
      content: "▼"
      font-size: 16px

  .shelf-list
    padding-left: 20px

  header.subnav
    height: 84px
    border-top: 1px solid #cccccc
    position: relative
    box-shadow: 0 7px 9px -5px rgba(0,0,0,0.2)

@media all and (min-width: 960px)
  .grid li
    width: 25%

.third-party-ad
  display: none

@media all and (min-width: 800px)
  .third-party-ad
    display: block
    text-align: center