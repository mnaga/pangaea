.shelf-department-picker, .refinements-toggle, .grid-toggle
  border-radius: 0
  margin: 0
  font-size: 14px
  border-right: 0
  height: 44px
  width: 50%
  float: left

.shelf-department-picker
  border-left: 0

.refinements-toggle
  padding-right: 60px

.grid-toggle
  position: absolute
  right: 0
  width: 48px
  text-indent: -999em

.shelf-list
  clear: both

.item-preview
  display: block
  position: relative
  overflow: hidden
  padding: 16px 12px

  &::after
    position: absolute
    content: " "
    right: 0
    left: 0
    top: 0
    height: 1px
    background: linear-gradient(left, white 0%, #e5e5e5 25%, #e5e5e5 75%, white 100%)

  .stars
    position: relative
    margin-left: 112px

.item-preview-image
  float: left
  max-width: 100px

.item-preview-text
  padding: 0
  margin-left: 112px

@media all and (min-width: 600px)
  .item-preview
    display: table
    width: 100%;
    padding: 20px

    .stars
      display: table-cell
      width: 195px
      min-height: 100px
      padding: 8px 0 8px 20px
      vertical-align: top

      &::after
        position: absolute
        content: " "
        left: 0
        top: 0
        bottom: 0
        width: 1px
        background: linear-gradient(top, white 0%, #e5e5e5 25%, #e5e5e5 75%, white 100%)
  
  .item-preview-image
    float: none
    display: table-cell
    width: 100px;
    vertical-align: top

  .item-preview-text
    display: table-cell
    padding: 0 24px
    vertical-align: top

@media all and (min-width: 800px)
  .search
    float: left
    margin-left: 25.53191489361702%
    padding-left: 20px
    border-left: 1px solid #ccc

