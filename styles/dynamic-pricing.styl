.dynamic-price
  font-size: 1.5em

.price.hidden
    opacity: 0

.decimal
  font-size: .6666em
  position: relative
  top: -0.25em

.new-price, .old-price
  position: absolute

.new-price, .bottom
  display: none

.dynamic-price
  position: relative
  top: -1em
  color: #282a2b
  font-weight: bold
  line-height: 1
  transition: 0.3s linear all

  .digit, .decimal, .special
    position: relative
    display: inline-block
    text-align: center
    margin: 0px
    transition: 0.6s linear width, 0.6s linear margin

  .digit, .decimal
    .top, .bottom
      border: 1px solid transparent
      transition 0.6s linear border

  .digit
    width: 16px

  .decimal
    width: 11px

  .special
    width: 8px

    &:first-child
      width: 16px

  &.updating
    .old-price
      .digit, .decimal
        .top, .bottom
          z-index: 50

        &.flipped
          .top
            animation: flipTop 0.4s linear both

          .bottom
            background-image: linear-gradient(top, rgba(0,0,0,0.15), transparent)
            background-repeat: no-repeat
            background-size: 50px
            animation: shadowBottom 0.4s linear both

    .new-price
      display: block

      .digit, .decimal
        .top, .bottom
          z-index: 1

        &.flipped
          .top
            animation: shadowTop 0.4s linear both

          .bottom
            animation: flipBottom 0.4s 0.4s linear both
            z-index: 100

    .digit, .decimal, .special
      position: relative
      display: inline-block
      text-align: center
      width: 20px
      margin: 1px
      height: 1em
      border-radius: 2px

    .special
      top: -7px
      width: 8px

      &:first-child
        width: 16px

    .decimal
      font-size: .6666em
      top: -9px

    .digit, .decimal
      .top
        position: absolute
        width: 100%
        left: 0
        top: 0
        background: #fff
        border: 1px solid #ccc
        border-radius: 3px 3px 0 0
        height: 12px
        overflow: hidden
        z-index: 2
        transition: 0.3s linear all
        transform-origin: 0 100%

      .bottom
        display: block
        width: 100%
        position: absolute
        left: 0
        background: #fff
        border: 1px solid #ccc
        border-radius: 0 0 3px 3px
        bottom: 0
        overflow: hidden
        margin-top: 1px
        height: 12px
        top: 10px
        transform-origin: 0 0

        span
          position: relative
          top: -11px

  &.updated
    .old-price
      display: none

    .new-price
      display: block

@keyframes shadowTop
  0%
    box-shadow: inset 0 0 50px rgba(0,0,0,0.15)
  99%
    box-shadow: inset 0 0 50px rgba(0,0,0,0)
  100%
    box-shadow: none

@keyframes shadowBottom
  0%
    background-position: 0 -50px
  100%
    background-position: 0 0

@keyframes flipTop
  0%
    transform: rotateX(0deg)
  100%
    transform: rotateX(-90deg)

@keyframes flipBottom
  0%
    transform: rotateX(90deg)
  100%
    transform: rotateX(0deg)

@media all and (min-width: 800px)
  .dynamic-price
    top: -29px
    font-size: 1.8em

    .digit, .decimal, .special
      height: 30px

    &.updating
      .digit, .decimal
        .top
          height: 16px

        .bottom
          height: 15px
          top: 14px

          span
            top: -14px
